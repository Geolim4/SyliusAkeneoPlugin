{% extends '@SynoliaSyliusAkeneoPlugin/Admin/layout.html.twig' %}

{% form_theme advanced_form '@SyliusUi/Form/theme.html.twig' %}
{% form_theme simple_form '@SyliusUi/Form/theme.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}

{% block title %}{{ 'sylius.ui.admin.akeneo.product_filter_rules.product_filter_rules'|trans }} {{ parent() }}{% endblock %}

{% block content %}
    {{ headers.default('sylius.ui.admin.akeneo.product_filter_rules.product_filter_rules'|trans, 'cogs') }}
    <div class="ui segment">
        {{ form_start(simple_form, {'attr': {'class': 'ui loadable form'}}) }}
        {{ form_row(simple_form) }}
        {{ form_end(simple_form) }}
    </div>
    <div class="ui segment">
        {{ form_start(advanced_form, {'attr': {'class': 'ui loadable form'}}) }}
        {{ form_row(advanced_form) }}
        {{ form_end(advanced_form) }}
    </div>
{% endblock %}
