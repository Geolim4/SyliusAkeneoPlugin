{% extends '@SynoliaSyliusAkeneoPlugin/Admin/layout.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}

{% block title %}{{ 'sylius.ui.admin.akeneo.api_configuration.api_configuration'|trans }} {{ parent() }}{% endblock %}

{% block content %}
    {{ headers.default('sylius.ui.admin.akeneo.api_configuration.api_configuration'|trans, 'cogs') }}
    <div class="ui segment">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="ui segment">
            {{ form_row(form.baseUrl) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {{ form_row(form.apiClientId) }}
            {{ form_row(form.apiClientSecret) }}
            {{ form_row(form.testCredentials) }}
        </div>
        <div class="ui segment">
            {{ form_row(form.paginationSize) }}
            {{ form_row(form.channel) }}
            <div class="ui toggle checkbox">
                {{ form_widget(form.isEnterprise) }}
                {{ form_label(form.isEnterprise) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
